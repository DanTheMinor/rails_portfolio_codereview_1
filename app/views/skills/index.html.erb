<h1>Skills List</h1>

<ul>
  <% @skills.each do |skill| %>
    <li><%= link_to skill.name, skill_path(skill) %>
      <%= link_to "Edit", edit_skill_path(skill) %> |
      <%= link_to "Delete", skill_path(skill),
                               :data => {:confirm => "Are you sure?",
                                              :method => "delete"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add New Skill", new_skill_path %>
