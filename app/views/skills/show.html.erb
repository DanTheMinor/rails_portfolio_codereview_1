<div class="container">
  <h1><%= @skill.name %></h1>

  <h4>Description: </h4>
  <p><%= @skill.description %></p>

  <% if @skill.projects.any? %>
    <h4>Here are the projects for this list:</h4>
    <ul>
      <% @skill.projects.each do |project| %>
        <li>
          <%= project.name %>
          <%= link_to "Edit", edit_skill_project_path(@skill, project) %> |
          <%= link_to "Delete", skill_project_path(@skill, project),
                                   :data => {:confirm => "Are you sure?",
                                                  :method => "delete"} %>
          <p><%= project.description %></p>
          <p><%= project.github %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no projects yet!</p>
  <% end %>

  <p><%= link_to "Return to Skills List", skills_path %></p>
  <p><%= link_to "Add a new Project to this Skill", new_skill_project_path(@skill) %></p>
</div>
